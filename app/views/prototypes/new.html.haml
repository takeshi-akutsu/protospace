.container.proto-new
  = form_for(@prototype, url: prototypes_path(@prototype), html: { method: :post }) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          = f.text_field :title, class: "proto-new-title", placeholder: "Title"
      .row
        .col-md-12
          .cover-image-upload
            = f.fields_for :images do |image_form|
              = image_form.file_field :image
              = image_form.hidden_field :status, value: :main
        .col-md-12
          %ul.proto-sub-list.list-group
            %li.list-group-item.col-md-4
              .image-upload
                = f.fields_for :images do |image_form|
                  = image_form.file_field :image
                  = image_form.hidden_field :status, value: :sub
            %li.list-group-item.col-md-4
              .image-upload
                = f.fields_for :images do |image_form|
                  = image_form.file_field :image
                  = image_form.hidden_field :status, value: :sub
            %li.list-group-item.col-md-4
              .image-upload-plus
                %span +
      .row.proto-description
        .col-md-12
          = f.text_field :catch_copy, placeholder: "Catch Copy"
        .col-md-12
          = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4"
        .col-md-12
          %h4 Tag List
          .row
            .col-md-3
              = f.text_field :tag_list, placeholder: "Web Design", name: "prototype[tag_list][]"
            .col-md-3
              = f.text_field :tag_list, placeholder: "UI", name: "prototype[tag_list][]"
            .col-md-3
              = f.text_field :tag_list, placeholder: "Application", name: "prototype[tag_list][]"
      .row.text-center.proto-btn
        = button_tag "Publish", class: "btn btn-lg btn-primary btn-block", type: "submit"
